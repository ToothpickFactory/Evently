{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"target": "ES2018",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*",
				"src/*",
				"./*"
			]
		}
	}
}