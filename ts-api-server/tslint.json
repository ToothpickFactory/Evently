{
	"defaultSeverity": "error",
	"extends": "tslint:recommended",
	"rules": {
		"align": true,
		"curly": [
			true,
			"ignore-same-line"
		],
		"indent": [
			true,
			"tabs"
		],
		"no-invalid-template-strings": true,
		"quotemark": [
			true,
			"single",
			"avoid-escape",
			"avoid-template"
		],
		"trailing-comma": [
			true,
			{
				"multiline": "never",
				"singleline": "never"
			}
		],
		"one-variable-per-declaration": false,
		"ordered-imports": false,
		"variable-name": false,
		"no-empty": [
			false
		],
		"interface-name": [
			true,
			"always-prefix"
		],
		"object-literal-sort-keys": false,
		"max-line-length": [
			true,
			{
				"limit": 120,
				"ignore-pattern": "'(.*)'|`(.*)`"
			}
		],
		"no-console": false
	}
}